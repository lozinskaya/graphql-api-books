{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/library-service/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/library-service/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/library-service",
  "projects": {
    "library-service": {
      "type": "application",
      "root": "apps/library-service",
      "entryFile": "main",
      "sourceRoot": "apps/library-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/library-service/tsconfig.app.json"
      }
    },
    "authors-service": {
      "type": "application",
      "root": "apps/authors-service",
      "entryFile": "main",
      "sourceRoot": "apps/authors-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/authors-service/tsconfig.app.json"
      }
    },
    "publishers-service": {
      "type": "application",
      "root": "apps/publishers-service",
      "entryFile": "main",
      "sourceRoot": "apps/publishers-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/publishers-service/tsconfig.app.json"
      }
    },
    "books-service": {
      "type": "application",
      "root": "apps/books-service",
      "entryFile": "main",
      "sourceRoot": "apps/books-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/books-service/tsconfig.app.json"
      }
    }
  }
}